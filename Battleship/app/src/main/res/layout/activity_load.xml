<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tristan.battleship.LoadActivity">

    <Button
        android:id="@+id/newGame"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Create a new game"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/loadGame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/deleteGame"/>

    <Button
        android:id="@+id/deleteGame"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Delete a game"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/loadGame"
        app:layout_constraintLeft_toRightOf="@+id/newGame"
        app:layout_constraintRight_toRightOf="parent"/>

    <ListView
        android:id="@+id/loadGame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/newGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
